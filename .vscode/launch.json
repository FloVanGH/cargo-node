  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "deploy canvas-bin demo browser",
      "program":"${workspaceFolder}/target/debug/cargo-node",
      "cwd": "${workspaceFolder}/demo/canvas-bin",
      "args": [
        "deploy",
        "--target",
        "browser",
      ],
      "preLaunchTask": "build",
      "sourceLanguages": [
        "rust"
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "build canvas-bin demo browser",
      "program": "${workspaceFolder}/target/debug/cargo-node",
      "cwd": "${workspaceFolder}/demo/canvas-bin",
      "args": [
        "build",
        "--target",
        "browser",
      ],
      "preLaunchTask": "build",
      "sourceLanguages": [
        "rust"
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "run canvas-bin demo browser",
      "program": "${workspaceFolder}/target/debug/cargo-node",
      "cwd": "${workspaceFolder}/demo/canvas-bin",
      "args": [
        "run",
        "--target",
        "browser",
      ],
      "preLaunchTask": "build",
      "sourceLanguages": [
        "rust"
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "build canvas-bin demo electorn",
      "program": "${workspaceFolder}/target/debug/cargo-node",
      "cwd": "${workspaceFolder}/demo/canvas-bin",
      "args": [
        "build",
        "--target",
        "electron",
      ],
      "preLaunchTask": "build",
      "sourceLanguages": [
        "rust"
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "run canvas-bin demo electron",
      "program": "${workspaceFolder}/target/debug/cargo-node",
      "cwd": "${workspaceFolder}/demo/canvas-bin",
      "args": [
        "run",
        "--target",
        "electron",
      ],
      "preLaunchTask": "build",
      "sourceLanguages": [
        "rust"
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "canvas-lib demo",
      "program": "${workspaceFolder}/target/debug/cargo-node",
      "cwd": "${workspaceFolder}/demo/canvas-lib",
      "args": [
        "build",
        "--target",
        "electron",
        "--example",
        "canvas"
      ],
      "preLaunchTask": "build",
      "sourceLanguages": [
        "rust"
      ]
    },
    {
      "name": "canvas-bin demo node",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/demo/canvas-bin/target/cargo-node/debug/",
      "runtimeExecutable": "npm",
      "windows": {
        "runtimeExecutable": "npm.cmd"
      },
      "args": [
        "start"
      ],
      "outputCapture": "std",
      "preLaunchTask": "build",
    },
    {
      "name": "canvas-lib demo node",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/demo/canvas-lib/target/cargo-node/debug/examples/",
      "runtimeExecutable": "npm",
      "windows": {
        "runtimeExecutable": "npm.cmd"
      },
      "args": [
        "start"
      ],
      "outputCapture": "std",
      "preLaunchTask": "build",
    }
  ]
}